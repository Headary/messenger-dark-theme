{
  "manifest_version": 2,
  "name": "Messenger Dark Theme",
  "author": "Headary",
  "version": "0.2.2",

  "description": "Enable dark mode in inbrowser messenger.",

  "content_scripts": [
    {
      "matches": ["*://*.messenger.com/*","*://*.facebook.com/messages/*"],
      "css":["styles.css"],
      "js":["options/inject.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": ["storage"],

  "applications": {
    "gecko": {
      "id": "addon@example.com"
    }
  },

  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "96": "icons/96.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  }

}
